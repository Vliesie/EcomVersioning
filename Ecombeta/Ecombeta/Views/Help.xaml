      <ContentPage.Content>
          <StackLayout>
          
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
          
               
                    <ScrollView Padding="20" x:Name="HelpScroll" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
